    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "subProcess": false,
            "justMyCode": false
        },
        {
            "name": "Current Module",
            "type": "debugpy",
            "request": "launch",
            "module": "${command:extension.commandvariable.file.relativeDirDots}.${fileBasenameNoExtension}",
            "console": "integratedTerminal",
            "subProcess": false,
            "justMyCode": false
        },
    ]
}